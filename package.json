{
  "name": "collab-mvp-app",
  "private": true,
  "workspaces": ["server", "client"],
  "engines": {
    "node": ">=20.19 <21"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.mjs",
    "predev": "node scripts/check-env.mjs",
    "dev": "node scripts/dev.mjs",
    "dev:server": "npm run dev --prefix server",
    "dev:client": "npm run dev --prefix client",
    "build": "npm run build --prefix client",
    "start": "npm run start --prefix server",
    "render:build": "npm install --prefix server --include=dev --no-audit --no-fund && npm install --prefix client --include=dev --no-audit --no-fund && npm run build --prefix client",
    "install:all": "node scripts/postinstall.mjs",
    "reset:db": "node scripts/reset-db.mjs"
  },
  "devDependencies": {}
}
